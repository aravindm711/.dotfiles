#!/bin/bash

# A Bash script to create contest folders with input files and code files

function create_folder() {
        echo "Creating folder $folder"

        folder=$1
        mkdir "$folder"
        cd "$folder"
        if [[ ${folder:0:5} == "Codef" ]]; then
            touch "a.cpp" "b.cpp" "c.cpp" "d.cpp"
        fi
        exit
}

if [[ $1 == "-cf" ]]; then
        folder="Codeforces"

        if [[ $2 == "-o" ]]; then
                folder+="$3"
                create_folder "$folder"
                exit
        fi

        if [[ $2 =~ ^[en][5-9][0-9][0-9][23]$ ]]; then
                arg=$2
                if [[ ${arg:0:1} == "e" ]]; then
                        folder+="Educational"
                fi
                folder+="Round#${arg:1:3}_Div${arg:4:1}"
                create_folder "$folder"
                echo "$folder created"
        else
                echo "Invalid arguments"
                exit
        fi
elif [[ $1 == "-cc" ]] ; then
        folder="Codechef"

        if [[ $2 == "-o" ]]; then
                folder+=$3
                create_folder "$folder"
                exit
        fi

        if [[ $2 =~ lc|lt|co ]]; then
                arg=$2
                folder+=`date | cut -d " " -f 2`
                case $arg in
                        "lc") folder+="LongChallenge";;
                        "lt") folder+="LunchTime";;
                        "co") folder+="CookOff";;
                esac
                folder+=`date | rev | cut -d " " -f 1 | rev`
                create_folder "$folder"
                echo "$folder created"
        else
                echo "Invalid arguments"
                exit
        fi
elif [[ $1 == "--help" ]] ; then
    echo "codeforces   ==>   [en]round#(Div?)"
    echo "codechef     ==>   [lc][lt][co]"
else
        echo  "Invalid arguments"
        exit
fi

