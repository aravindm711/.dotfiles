#! /bin/bash

bookmarkFile="/Users/aravindmurali/.NERDTreeBookmarks"
if [[ -f "$bookmarkFile" ]]; then
    i=0
    while IFS= read -r line
    do
        dir=`echo "$line" | cut -d " " -f 2`
        bdir[i]=$dir
        ((i=i+1))
    done < "$bookmarkFile"

    ((i=i-2))
    for (( key=0; key<=$i; key++ ))
    do
        echo "$key : ${bdir[$key]}"
    done

    read -p 'enter dir index: ' index
    if [[ -n ${bdir[$index]} ]]; then
        cddir="cd ${bdir[$index]}"
        echo -n $cddir  | pbcopy
    else
        echo "invalid dir index"
    fi
else
    echo "bookmarkFile doesn't exist"
fi
